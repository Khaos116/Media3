<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/black"
  tools:layout_gravity="center"
  tools:layout_height="200dp"
  tools:layout_width="match_parent">
  <!--底部播放进度-->
  <ProgressBar
    android:id="@+id/bottom_progressbar"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="match_parent"
    android:layout_height="1.5dp"
    android:layout_alignParentBottom="true"
    android:max="100"
    android:progressDrawable="@drawable/video_progress"
    android:visibility="gone" />
  <!--未知-->
  <ImageView
    android:id="@+id/back_tiny"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginStart="6dp"
    android:layout_marginTop="6dp"
    android:contentDescription="@null"
    android:visibility="gone" />

  <!--中间加载-->
  <ProgressBar
    android:id="@+id/loading"
    style="?android:attr/progressBarStyleLarge"
    android:layout_width="28dp"
    android:layout_height="28dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:visibility="invisible" />
  <!--中间暂停-->
  <ImageView
    android:id="@+id/start"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center_vertical"
    android:contentDescription="@null"
    android:src="@drawable/video_click_play_selector"
    android:visibility="gone" />
  <!--锁住按钮-->
  <ImageView
    android:id="@+id/lock_screen"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:layout_marginEnd="50dp"
    android:contentDescription="@null"
    android:scaleType="centerInside"
    android:src="@drawable/unlock"
    android:visibility="gone" />
  <!--封面-->
  <RelativeLayout
    android:id="@+id/thumb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:background="#000000"
    android:scaleType="fitCenter"
    android:visibility="gone" />
  <!--使用Web播放视频-->
  <WebView
    android:id="@+id/webView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:visibility="gone" />
  <!--播放器-->
  <RelativeLayout
    android:id="@+id/surface_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" />
  <!--顶部标题和返回-->
  <LinearLayout
    android:id="@+id/layout_top"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:background="@drawable/video_title_bg"
    android:gravity="center_vertical">
    <!--返回按钮-->
    <ImageView
      android:id="@+id/back"
      android:layout_width="30dp"
      android:layout_height="38dp"
      android:contentDescription="@null"
      android:paddingVertical="10dp"
      android:src="@drawable/svg_player_back" />
    <!--标题-->
    <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:contentDescription="@null"
      android:ellipsize="marquee"
      android:singleLine="true"
      android:textColor="@android:color/white"
      android:textSize="12sp"
      tools:text="球队A VS 球队B" />
  </LinearLayout>
  <!--底部操作-->
  <LinearLayout
    android:id="@+id/layout_bottom"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:layout_alignParentBottom="true"
    android:background="#99000000"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="3dp"
    android:visibility="invisible"
    tools:background="#6600fff0"
    tools:visibility="visible">

    <Space
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1" />
    <!--重新播放-->
    <ImageView
      android:id="@+id/ivReStart"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:layout_gravity="center_vertical"
      android:layout_marginStart="11dp"
      android:contentDescription="@null"
      android:paddingStart="6dp"
      android:paddingEnd="6dp"
      android:scaleType="fitCenter"
      android:src="@drawable/svg_player_live_refresh" />
    <!--当前播放时间-->
    <TextView
      android:id="@+id/current"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="1dp"
      android:text="00:00"
      android:textColor="#ffffff"
      android:textSize="11sp"
      android:visibility="gone"
      tools:ignore="HardcodedText" />
    <!--进度条-->
    <SeekBar
      android:id="@+id/progress"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="1.0"
      android:background="@null"
      android:max="100"
      android:maxHeight="4dp"
      android:minHeight="4dp"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      android:progressDrawable="@drawable/my_video_seek_progress"
      android:thumb="@drawable/my_video_seek_thumb"
      android:visibility="gone"
      tools:progress="50"
      tools:secondaryProgress="80" />
    <!--视频总时长-->
    <TextView
      android:id="@+id/total"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="1dp"
      android:text="00:00"
      android:textColor="#ffffff"
      android:textSize="11sp"
      android:visibility="gone"
      tools:ignore="HardcodedText" />
    <!--全屏按钮-->
    <ImageView
      android:id="@+id/fullscreen"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:layout_marginEnd="11dp"
      android:contentDescription="@null"
      android:paddingVertical="6dp"
      android:scaleType="fitCenter"
      android:src="@drawable/svg_player_live_full_enter" />
  </LinearLayout>
  <!--小窗关闭按钮-->
  <ImageView
    android:id="@+id/small_close"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:contentDescription="@null"
    android:paddingTop="10dp"
    android:scaleType="centerInside"
    android:src="@drawable/video_small_close"
    android:visibility="gone" />
</RelativeLayout>
